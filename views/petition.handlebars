
<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Beetition
      </h1>
      <h2 class="subtitle">
        Bee kind, sign the Petition to save Beekind.
      </h2>
    </div>
  </div>
</section>

<div class="container">

<h3 class="subtitle is-3">Protect the pollinators</h3>
{{#if first}}
<h3 class="subtitle is-3">{{first}} {{last}}, please join us!</h3>
{{else}}
<h3 class="subtitle is-3">Please join us!</h3>
{{/if}}
</div>

<form class="formular is-pulled-right" action="/petition" method="post">
    {{#if error}}
    <h2 class="notification is-danger">
      {{error}}
    </h2>
    {{/if}}
<canvas id="canSign" width="600" height="200">Signature</canvas>
<input id="signatureField" type="hidden" name="signature" value=""></input>
<input id="csurfval" type="hidden" name="_csrf" value="{{csrfToken}}">
<button class="button is-primary is-medium cButton" type="submit" name="button">Submit</button>
</form>
</section>
